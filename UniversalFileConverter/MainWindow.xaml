<Window x:Class="UniversalFileConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Universal File Converter" Height="450" Width="800" MouseDown="Window_MouseDown" 
        Drop="Window_Drop" Cursor="Hand" AllowDrop="True" Icon="icon.png">
    <StackPanel Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Source="Graphics/load_file.png" Width="172" Height="214"/>
        <Label Content="Click or drag files here" HorizontalAlignment="Center" FontSize="22" FontWeight="Normal"/>
    </StackPanel>
</Window>
